{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "PUBG: Hotdrops",
    "version": "0.9.0",
    "minimum-overwolf-version": "0.120.0",
    "author": "WallyKarbo,joefr0",
    "icon": "IconMouseOver.png",
    "icon_gray": "IconMouseNormal.png",
    "launcher_icon": "desktop-icon.ico",
    "description": "Pubg heatmap in-game visualization"
  },
  "permissions": [
    "Hotkeys",
    "DesktopStreaming",
    "GameInfo"
  ],
  "data": {
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [10906]
    },
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [10906]
        },
        "start_minimized": true
      }
    ],
    "hotkeys": {
      "pubg_devchallenge_showhide": {
        "title": "Show In-Game Window",
        "action-type": "toggle",
        "default": "Ctrl+F"
      },
      "pubg_heatmap_showhide": {
        "title": "Overlay Heat",
        "action-type": "custom",
        "default": "U"
      }
    },
    "game_events": [10906],
    "start_window": "background",
    "windows": {
      "background": {
        "file": "build/index.html",
        "native_window": true,
        "desktop_only": true,
        "background_optimization": false,
        "is_background_page": true,
        "transparent": true,
        "resizable": false,
        "show_in_taskbar": false,
        "size": {
          "width": 100,
          "height": 100
        },
        "grab_keyboard_focus": false
      },
      "settings": {
        "file": "build/index.html",
        "transparent": false,
        "resizable": true,
        "size": {
          "width": 780,
          "height": 800
        },
        "min_size": {
          "width": 500,
          "height": 300
        }
      },
      "ingame": {
        "file": "build/index.html",
        "transparent": true,
        "resizable": false,
        "size": {
          "width": 540,
          "height": 540
        },
        "min_size": {
          "width": 540,
          "height": 540
        },
        "clickthrough": false,
        "focus_game_takeover": "ReleaseOnLostFocus"
      }
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://*.google-analytics.com",
        "http://*.google-analytics.com",
        "https://*.googleapis.com",
        "https://*.githubusercontent.com"
      ]
    }
  }
}
